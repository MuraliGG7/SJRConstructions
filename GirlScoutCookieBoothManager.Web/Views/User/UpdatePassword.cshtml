@model GirlScoutCookieBoothManager.Web.ViewModels.UpdatePasswordVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/user/user.css" rel="stylesheet" />

<h4 align="center">
    Update Password
</h4>

<form asp-controller="User" asp-action="UpdatePassword" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label asp-for="NewPassword" class="form-label">New Password</label>
    <div class="form-floating">
        <input asp-for="NewPassword" class="form-control" autocomplete="username" aria-required="true" />       
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <label asp-for="ConfirmPassword" class="form-label">Re-enter New Password</label>
    <div class="form-floating">        
        <input asp-for="ConfirmPassword" class="form-control" autocomplete="username" aria-required="true" />     
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Email" />
    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Update Password</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
