@model GirlScoutCookieBoothManager.Web.ViewModels.LoginDetailsVM // Replace with your model namespace
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/user/Login.css" rel="stylesheet" />
<form asp-controller="User" asp-action="Login" method="post">
    <h4 align="center" style="font-size: 1.7rem;font-weight: 500;">
        Sign In
    </h4>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="form-label">Email Address</label>
        <input asp-for="Email" class="form-control mt-2" autocomplete="username" aria-required="true" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control mt-2" autocomplete="current-password" aria-required="true" />        
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button id="login-submit" type="submit" class="btn">Sign In</button>
    <div class="link-container">
        <div class="forgot-password mt-2">
            <a class="custom-link" href="/User/ForgotPassword">Forgot your password?</a>
        </div>
    </div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

