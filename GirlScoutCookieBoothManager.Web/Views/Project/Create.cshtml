@model ProjectDetailsVM
@{
    ViewData["Title"] = "Create Project";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<link href="~/css/Location/location.css" rel="stylesheet" />
<form asp-action="Create">
    <h2 align="center">
        Add Project
        <div class="float-start">
            <a class="btn btn-primary" id="backList" asp-action="Index"><i class="fa-solid fa-circle-arrow-left me-1"></i> Back to List</a>
        </div>
    </h2>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container text-center">
        <div class="row row-cols-3 mt-5 mb-4">
            <div class="col">
                <label asp-for="ProjectName" class="control-label"></label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Address1" class="control-label"></label>
                <input asp-for="Address1" class="form-control" />
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Address2" class="control-label"></label>
                <input asp-for="Address2" class="form-control" />
                <span asp-validation-for="Address2" class="text-danger"></span>
            </div>
        </div>
        <div class="row row-cols-3 mb-4">
            <div class="col">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="ZIPCode" class="control-label"></label>
                <input asp-for="ZIPCode" class="form-control" />
                <span asp-validation-for="ZIPCode" class="text-danger"></span>
            </div>
        </div>
        <div class="row row-cols-3 mb-4">
            <div class="col">
                <label asp-for="OwnerName" class="control-label"></label>
                <input asp-for="OwnerName" class="form-control" />
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="OwnerContact" class="control-label"></label>
                <input asp-for="OwnerContact" class="form-control" />
                <span asp-validation-for="OwnerContact" class="text-danger"></span>
            </div>
            <div class="col">
                <!-- Assuming Status is a dropdown -->
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="StatusId" class="form-select">
                    <option value="1">In Progress</option>
                    <option value="2">Completed</option>
                    <option value="3">Future</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <button id="createProjectSubmit" type="submit" class="btn btn-primary">Create Project</button>
        </div>
    </div>
</form>
